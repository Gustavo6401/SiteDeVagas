@model GustaVagas.Domain.Entities.CargoUser

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="titulo">Cadastrar</h1>

<h4 class="subtitulo">Cadastrar Cargo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Candidate.CPF" class="control-label">CPF da Pessoa</label>
                <input asp-for="Candidate.CPF" class="form-control" />
                <span asp-validation-for="Candidate.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo.Nome" class="control-label">Nome do Cargo</label>
                <input asp-for="Cargo.Nome" class="form-control" />
                <span asp-validation-for="Cargo.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
    <a asp-controller="Home" asp-action="Index">Voltar Para a Página Inicial</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
